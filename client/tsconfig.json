{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "rootDir": "./",
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    },
  },
  "exclude": [
    "./dist",
    "./node_modules"
  ],
  "include": [
    "./src",
    "**/*.ts",
    "**/*.tsx"
  ],
  "rules": {
    "ban-ts-ignore": true
  }
}
