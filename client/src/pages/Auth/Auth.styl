.Container
  position absolute
  left 0
  top 0
  height 100vh
  width 100vw
  background-color rgba(0,0,0,0.9);
  display flex
  justify-content center
  align-items center
  &__title
    margin 0
    padding 0
    opacity 1
  &__body
    display flex
    justify-content center
    align-items center
    flex-direction column
    gap 24px
    opacity 1
    background white
    border-radius 10px
    padding 16px 32px
    width 450px