.AddRatingCreate
  display flex
  flex-direction column
  gap 16px
  padding 16px
  border-radius 10px
  background rgba(47, 4, 79, 0.5)
  &__rating
    display flex
    gap 16px
    justify-content space-between
    align-items center
    &__estimation
      display flex
      gap 16px
      align-items center
  &__informer
    display flex
    justify-content center
    align-items center
    height 10vh
  &__ratingsContainer
    padding 16px
    display flex
    flex-direction column
    gap 8px
    max-height 20vh
    overflow-y auto
  &__footer
    position fixed
    left 0
    bottom 0
    padding 16px
    background rgba(47, 4, 79, 0.5)
    border 1px solid rgba(98, 51, 179, 0.6)
    width 98.5vw
    display flex
    justify-content flex-end