.ModalContainer
  padding 16px
  border-radius 10px
  background rgba(47, 4, 79, 0.9)
  border 1px solid rgba(98, 51, 179, 0.6)
  height 85vh
  width 85vw
  display flex
  flex-direction column
  gap 24px
  &__content
    display grid
    grid-template-columns 0.5fr 1fr
    gap 24px
    &__leftSide
      display flex
      flex-direction column
      justify-content flex-start
      gap 16px
      &__row
        padding 16px
        border-radius 10px
        border 1px dashed #FFFFFF
        cursor pointer
        &.active
          color #51dd00
          border 1px dashed #51dd00
        &__title
          &.active
            color #51dd00

  &__actions
    display flex
    justify-content flex-end