.FullRecipe
  display grid
  grid-template-columns 1fr 0.8fr
  gap 16px
  align-items flex-start
  height calc(100vh - 350px)
  overflow-y auto
  padding 16px
  border-radius 10px
  background rgba(47, 4, 79, 0.5)
  border 1px solid rgba(98, 51, 179, 0.6)
  &__leftSide
    display flex
    flex-direction column
    align-items flex-start
    gap 16px
    &__img
      max-width 450px
      border-radius 10px
  &__rightSide
    display flex
    flex-direction column
    justify-content center
    &__header
      display grid
      grid-template-columns repeat(5,1fr)
      gap 8px
      padding 16px
      align-items center
      border 1px solid #f5f7fa
      border-top-right-radius 10px
      border-top-left-radius 10px
    &__list
      display flex
      flex-direction column
      &__row
        display grid
        grid-template-columns repeat(5,1fr)
        gap 8px
        padding 16px
        border 1px solid #f5f7fa
        &__col
          text-align center
          color: #f5f7fa

.footerRecipe {
  display flex
  gap 10px
  justify-content space-between
  align-items center
}
.Footer
  display flex
  padding 16px
  justify-content flex-end
  gap 8px
  margin-top 24px
  border-radius 10px
  background rgba(47, 4, 79, 0.5)
  border 1px solid rgba(98, 51, 179, 0.6)