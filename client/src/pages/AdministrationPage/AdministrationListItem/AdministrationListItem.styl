.RecipesListItem
  display flex
  gap 16px
  align-items center
  padding 16px
  border-radius 10px
  background-image linear-gradient(315deg, #492489 5%,#8860D0 74%);
  border 1px solid rgba(98, 51, 179, 0.6)
  overflow-x hidden
  justify-content space-between
  cursor pointer
  overflow-y hidden
  &__image
    max-width 100px
  &__title
    font-size 18px
    font-weight 700
  &__subTitle
    font-size 14px
  &__price
    font-weight 600