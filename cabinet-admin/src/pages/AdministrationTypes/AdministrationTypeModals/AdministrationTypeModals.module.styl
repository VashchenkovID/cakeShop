.Container
  background: radial-gradient(350.94% 343.49% at 51.82% -159.87%, #404657 0%, rgba(64, 70, 87, 1) 100%);
  backdrop-filter: blur(34px);
  padding 24px
  z-index 100
  border-radius 10px
  display flex
  flex-direction column
  gap 16px
  height auto
  width 30vw
  min-height 18vh
  justify-content space-between
  &__files
    display flex
    flex-direction column
    gap 8px
    justify-content center
    align-items center
  &__actions
    display flex
    gap 16px
    justify-content flex-end
