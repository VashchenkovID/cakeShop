.Shop
  margin 24px
  min-height 60vh
  max-height calc(100vh - 170px)
  overflow-y auto
  overflow-x hidden
  display flex
  flex-direction column
  gap 24px
  &__header
    display flex
    gap 16px
    &__type
      padding 8px
      cursor pointer
      &.active
        border-radius 10px
        border 2px solid #f5f7fa
  &__items
    display flex
    gap 16px
    flex-wrap wrap
  &__active
    position absolute
    bottom 0
    left 0
    padding 16px
    background-image linear-gradient(315deg, #492489 5%,#8860D0 74%);
    width calc(100vw - 32px)
  &__loader
    display flex
    justify-content center
    align-items center


.IconBasket
  position absolute
  width 50px
  height 50px
  border-radius 50%
  background #fbc102
  display flex
  justify-content center
  align-items center
  bottom 1vh
  right 2vw
  z-index 100
  transition: opacity .5s;
  opacity 0
  transform: translate3d(0px, -20px, 0px);
  cursor pointer
  &.visible
    margin-right 0
    opacity 1
    @media (max-width 800px)
      opacity 1
      margin-right 10px
  &__icon
    max-width 30px

