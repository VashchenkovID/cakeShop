.Item
  display flex
  flex-direction column
  gap 16px
  max-width 20vw
  min-width 300px
  cursor pointer
  @media (max-width 600px)
    max-width 600px
  @media (max-width 400px)
    min-width 250px
  @media (max-width 350px)
    min-width 225px
  &__image
    height auto
    border-radius 10px
    width 100%
    max-width: 25vw
    max-height 200px
    @media (max-width 1300px)
      min-width 300px
    @media (max-width 700px)
      max-width 230px
    @media (max-width 400px)
      max-width 300px
      min-width 1vw
  &__title
    display flex
    justify-content space-between
    gap 16px
    align-items center
  &__rating
    display flex
    align-items center
    gap 4px
    &__text
      margin-top 2px
    &__icon
      &.colored
        color #fbc102
  &__basket
    display flex
    justify-content space-between
    gap 8px
  &__addActions
    display flex
    gap 8px
    align-items center
  &__footer
    display flex
    align-items center
    gap 8px
    justify-content space-between
