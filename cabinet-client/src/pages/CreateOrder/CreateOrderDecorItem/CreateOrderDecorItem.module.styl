.Decor
  display grid
  grid-template-columns repeat(4,1fr)
  gap 16px
  align-items center
  @media (max-width 500px)
    display flex
    justify-content space-between
  &__mobile
    &__text
      white-space nowrap
      @media (max-width 900px)
        font-size 14px
      @media (max-width 900px)
        font-size 12px
  &__name
    display flex
    gap 8px
    align-items center
  &__actions
    display flex
    gap 8px
    align-items center
.Checkbox :global(.Checkbox-Input) {
  border 1px solid #fbc102
}

.Checkbox :global(.Checkbox-Input:hover) {
  border 1px solid #fbc102
}

.Checkbox :global(.Checkbox-Input:checked) {
  background #fbc102
  color #FFFFFF
}
.Checkbox :global(.MixFocus) {
  color #97B2C4
}