
.Header
  background: linear-gradient(224deg, rgba(46, 49, 146, 0.70) 0%, rgba(212, 20, 90, 0.70) 100%) !important;
  box-shadow: 0px 4px 40px 0px rgba(0, 0, 0, 0.10);
  &__burger
    color #FFFFFF
  &__left
    display flex
    align-items center
    gap 16px
    padding-left 24px
  &__nav
    display flex
    gap 24px
    align-items center
  &__user
    display flex
    align-items center
    gap 8px
  &__li
    list-style none
    cursor pointer

.Header.not
    display none
.buttons
  display flex
  gap 16px

.Sidebar
  z-index 10000
  padding 16px !important
  background #FFFFFF
  justify-content space-between
  max-width 350px !important
  &__user
    display flex
    align-items center
    justify-content space-between
    gap 4px
  &__closeBtn
    color #000000
  &__links
    display flex
    flex-direction column
    gap 16px
    margin-top 24px
  &__link
    padding 8px 0
    cursor pointer
    color black
    &.active
      color #fbc102
      border-bottom 1px solid #fbc102
  &__footer
    box-shadow: 0 5px 15px 0 rgba(0,0,0,0.2);
    margin 0px -16px 16px -16px
    padding 16px
    border-top 1px solid rgba(255, 255, 255, 0.46)
    background rgba(0,0,0,0.7);
.Logo
  width 60px
  height 60px
.userComp :global(.User-Name)
  color #FFFFFF


.mobileLogo
  display flex
  gap 8px
  align-items center
.logoText
  color #FFFFFF
  cursor pointer
