.root {
  display: flex;
  gap: 7px;
  height: 24px;
  @media (max-width 500px) {
    gap 0
    font-size 12px
  }
}

button {
  background-color: transparent;
  border: none;
  outline: none;
  cursor: pointer;
}
.on {
  color: #f2c94c;
  @media (max-width 500px) {
    padding 0
  }
}
.off {
  color: rgba(0, 32, 51, 0.3);
  @media (max-width 500px) {
    padding 0
  }
}

.star {
  font-size: 26px;
  @media (max-width 500px) {
    font-size 14px
  }

}
